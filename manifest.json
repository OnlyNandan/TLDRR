{
  "manifest_version": 3,
  "name": "TLDRR: Too Long; Didn't Read? Refined.",
  "version": "1.4.1",
  "description": "Translating chaos into clarity.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.reddit.com/*",
    "https://reddit.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.reddit.com/*",
        "https://reddit.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TDLRR Settings"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.html",
        "toolbar.html",
        "icons/*"
      ],
      "matches": [
        "https://*.reddit.com/*",
        "https://reddit.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
